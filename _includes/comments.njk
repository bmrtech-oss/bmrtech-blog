<section class="comments mt-12 border-t pt-8" data-slug="{{ slug }}">
  <h3 class="text-2xl font-bold mb-6">Comments</h3>
  
  <div class="comments-list mb-8" id="comments-container">
    <p class="text-gray-600">Loading comments...</p>
  </div>

  <form class="comment-form bg-gray-50 p-6 rounded-lg" id="comment-form">
    <input type="hidden" name="postSlug" value="{{ slug }}">
    
    <div class="form-group mb-4">
      <label for="authorName" class="block text-sm font-medium text-gray-700 mb-2">Name:</label>
      <input type="text" id="authorName" name="authorName" required 
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
    </div>
    
    <div class="form-group mb-4">
      <label for="authorEmail" class="block text-sm font-medium text-gray-700 mb-2">Email:</label>
      <input type="email" id="authorEmail" name="authorEmail" required 
             class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
      <p class="text-xs text-gray-500 mt-1">Your email will be used for comment notifications</p>
    </div>
    
    <div class="form-group mb-4">
      <label for="content" class="block text-sm font-medium text-gray-700 mb-2">Comment:</label>
      <textarea id="content" name="content" rows="4" required 
                class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"></textarea>
    </div>
    
    <div class="form-group mb-4 flex items-center">
      <input type="checkbox" id="subscribe" name="subscribe" checked 
             class="mr-2 h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded">
      <label for="subscribe" class="text-sm text-gray-700">Subscribe to comment replies</label>
    </div>
    
    <button type="submit" 
            class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors">
      Post Comment
    </button>
  </form>
</section>

<script src="/js/comments.js"></script>