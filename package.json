{
	"name": "eleventy-base-blog",
	"version": "8.0.0",
	"description": "A starter repository for a blog web site using the Eleventy site generator.",
	"scripts": {
		"dev": "npx @11ty/eleventy --serve",
		"build": "npx @11ty/eleventy",
		"build-ghpages": "npx @11ty/eleventy --pathprefix=/eleventy-base-blog/",
		"start": "npx @11ty/eleventy --serve --quiet",
		"debug": "DEBUG=Eleventy* npx @11ty/eleventy",
		"debugstart": "DEBUG=Eleventy* npx @11ty/eleventy --serve --quiet",
		"benchmark": "DEBUG=Eleventy:Benchmark* npx @11ty/eleventy",
		"dev:cloudflare": "dotenv -- npx @11ty/eleventy --serve",
		"build:cloudflare": "dotenv -- npx @11ty/eleventy",
		"deploy": "dotenv -- npm run build:cloudflare && npx wrangler pages publish _site --project-name=bmrtech-blog",
		"db:backup": "npx wrangler d1 export blog-db --output ./backups/backup-$(date +%Y%m%d-%H%M%S).sql",
		"db:schema": "npx wrangler d1 execute blog-db --command=\".schema\"",
		"db:check": "npx wrangler d1 execute blog-db --command=\"SELECT name FROM sqlite_master WHERE type='table';\"",
		"db:migrate:safe": "npm run db:backup && npx wrangler d1 execute blog-db --file=schema.sql",
		"db:migrate:dry-run": "npx wrangler d1 create blog-db-test && npx wrangler d1 execute blog-db-test --file=schema.sql && npx wrangler d1 execute blog-db-test --command=\".schema\"",
		"wrangler:login": "npx wrangler login",
		"wrangler:dev": "dotenv -- npx wrangler pages dev _site --local",
		"test:db": "node local-testing/test-db.js",
		"test:api": "node local-testing/test-api.js",
		"api:server": "node local-testing/local-api-server.js",
		"dev:full": "npm run api:server & npm run dev"
	},
	"repository": {
		"type": "git",
		"url": "git://github.com/11ty/eleventy-base-blog.git"
	},
	"author": {
		"name": "Zach Leatherman",
		"email": "zachleatherman@gmail.com",
		"url": "https://zachleat.com/"
	},
	"license": "MIT",
	"engines": {
		"node": ">=14"
	},
	"funding": {
		"type": "opencollective",
		"url": "https://opencollective.com/11ty"
	},
	"bugs": {
		"url": "https://github.com/11ty/eleventy-base-blog/issues"
	},
	"homepage": "https://github.com/11ty/eleventy-base-blog#readme",
	"devDependencies": {
		"@11ty/eleventy": "^2.0.1",
		"@11ty/eleventy-img": "^3.1.1",
		"@11ty/eleventy-navigation": "^0.3.5",
		"@11ty/eleventy-plugin-bundle": "^1.0.4",
		"@11ty/eleventy-plugin-rss": "^1.2.0",
		"@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
		"dotenv-cli": "^10.0.0",
		"luxon": "^3.3.0",
		"markdown-it-anchor": "^8.6.7",
		"sqlite3": "^5.1.7"
	},
	"dependencies": {
		"dotenv": "^17.2.2",
		"wrangler": "^4.38.0"
	}
}
